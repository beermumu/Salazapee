<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="homeview" prefHeight="600.0" prefWidth="699.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.HomeController">
   <children>
      <Label layoutY="-3.0" prefHeight="68.0" prefWidth="699.0" style="-fx-background-color: #4682B4;" text="Salazapee" textFill="WHITE">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <TableView fx:id="productTableView" layoutX="14.0" layoutY="108.0" prefHeight="486.0" prefWidth="331.0">
         <columns>
            <TableColumn fx:id="columnName" prefWidth="153.0" text="Name">
               <cellValueFactory>
                  <PropertyValueFactory property="subjectID" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="columnQuantity" prefWidth="57.0" text="Quantity">
               <cellValueFactory>
                  <PropertyValueFactory property="subjectID" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="columnPrice" prefWidth="120.0" text="Price">
               <cellValueFactory>
                  <PropertyValueFactory property="subjectID" />
               </cellValueFactory>
            </TableColumn>
         </columns>
      </TableView>
      <Button fx:id="deleteProductBtn" layoutX="370.0" layoutY="541.0" mnemonicParsing="false" onAction="#showCreateViewBtn" prefHeight="54.0" prefWidth="94.0" text="Delete item" />
      <Button fx:id="clearCartBtn" layoutX="481.0" layoutY="541.0" mnemonicParsing="false" onAction="#showEditViewBtn" prefHeight="54.0" prefWidth="94.0" text="Clear Cart" />
      <Button fx:id="purchaseBtn" layoutX="590.0" layoutY="541.0" mnemonicParsing="false" onAction="#showDeleteViewBtn" prefHeight="54.0" prefWidth="94.0" text="Purchase" />
      <Button fx:id="resetFillterBtn" layoutX="605.0" layoutY="28.0" mnemonicParsing="false" onAction="#resetFillter" prefHeight="30.0" prefWidth="79.0" text="Reset Fillter" />
      <Button fx:id="searchProductBtn" layoutX="520.0" layoutY="28.0" mnemonicParsing="false" onAction="#search" prefHeight="30.0" prefWidth="79.0" text="Search" />
      <TableView fx:id="cartTableView" layoutX="370.0" layoutY="108.0" prefHeight="420.0" prefWidth="316.0">
         <columns>
            <TableColumn fx:id="cartColumnName" prefWidth="150.0" text="Name">
               <cellValueFactory>
                  <PropertyValueFactory property="subjectID" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="cartColumnQuantity" prefWidth="65.0" text="Quantity">
               <cellValueFactory>
                  <PropertyValueFactory property="subjectID" />
               </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="cartColumnPrice" prefWidth="100.0" text="Price">
               <cellValueFactory>
                  <PropertyValueFactory property="subjectID" />
               </cellValueFactory>
            </TableColumn>
         </columns>
      </TableView>
      <Label layoutX="14.0" layoutY="78.0" prefHeight="30.0" prefWidth="125.0" text="Products" />
      <Label layoutX="371.0" layoutY="78.0" prefHeight="30.0" prefWidth="125.0" text="Cart" />
      <ComboBox fx:id="typeCombobox" layoutX="371.0" layoutY="28.0" prefHeight="30.0" prefWidth="143.0" promptText="------- Type -------" />
   </children>
</AnchorPane>
